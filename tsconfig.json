{
  "compilerOptions": {
    "target": "esnext",
    "sourceMap": true,
    "module": "commonjs",
    "removeComments": true,
    "jsx": "react",
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "paths": {
      "src/*": ["./src/*"]
    },
    "declaration": true,
    "declarationDir": "dist/types"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "types/useApi.d.ts"],
  "exclude": ["node_modules", "dist"]
}
